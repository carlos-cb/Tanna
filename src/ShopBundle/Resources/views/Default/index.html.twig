{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/shop/css/index.css') }}">
{% endblock %}

{% block body %}

    {% include 'ShopBundle:Public:header.html.twig' %}

    <div class="container">
        <div class="col-xs-12" style="padding-right: 0;padding-left: 0;margin-bottom: 60px;">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <a href="{{ path('shop_productList_sale') }}">
                            <img src="{{ asset('bundles/shop/img/slider1.jpg') }}">
                        </a>
                    </div>
                    <div class="item">
                        <a href="{{ path('shop_productList_new') }}">
                            <img src="{{ asset('bundles/shop/img/slider2.jpg') }}">
                        </a>
                    </div>
                </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <section class="home-block grid2">
            <h4 class="hs1" style="display: none;">NOVEDADES</h4>
            <br>
            <div class="best-picks-wrapper row">
                <div class="col-xs-6 col-md-3">
                    <a href="{{ path('shop_productList', { 'category': 7}) }}">
                        <img src="{{ asset('bundles/shop/img/top1.jpg') }}">
                        <h4 class="hs1">SHORTS</h4>
                    </a>
                </div>
                <div class="col-xs-6 col-md-3">
                    <a href="{{ path('shop_productList', { 'category': 2}) }}">
                        <img src="{{ asset('bundles/shop/img/top2.jpg') }}">
                        <h4 class="hs1">ABRIGOS</h4>
                    </a>
                </div>
                <div class="col-xs-6 col-md-3">
                    <a href="{{ path('shop_productList', { 'category': 10}) }}">
                        <img src="{{ asset('bundles/shop/img/top3.jpg') }}">
                        <h4 class="hs1">JERSEYS</h4>
                    </a>
                </div>
                <div class="col-xs-6 col-md-3">
                    <a href="{{ path('shop_productList', { 'category': 8}) }}">
                        <img src="{{ asset('bundles/shop/img/top4.jpg') }}">
                        <h4 class="hs1">FALDAS</h4>
                    </a>
                </div>
            </div>
        </section>
        <br><br><br><br>
        <div class="row showcase">
            <div class="col-md-6">
                <h3 class="hs1">PUNTO</h3>
                <a href="{{ path('shop_productList_sale') }}"><img src="{{ asset('bundles/shop/img/show1.jpg') }}" style="height:840px"></a>
            </div>
            <div class="col-md-6">
                <a href="{% if userNow is defined and userNow %}{{ path('autonomo_index') }}{% else %}{{ path('fos_user_security_login') }}{% endif %}"><img src="{{ asset('bundles/shop/img/show2.jpg') }}"></a>

                <br>
                <hr class="featurette-divider">
                <h1 class="ha1">Mejor Vendido En Tienda</h1>
                <div class="col-md-6">
                    <a href="{{ path('shop_productList_new') }}"><img src="{{ asset('bundles/shop/img/show3.jpg') }}"></a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('shop_productList_new') }}"><img src="{{ asset('bundles/shop/img/show4.jpg') }}"></a>
                </div>
            </div>
        </div>
        <br><br>
    </div>

    {% include 'ShopBundle:Public:footer.html.twig' %}
{% endblock %}