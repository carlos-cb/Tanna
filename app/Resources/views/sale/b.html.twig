{% endblock %}

{% block content %}
    <h1 class="sub-header">Descuento Forma X x Y</h1>
    <a href="{{ path('sale_index') }}" class="button button-rounded button-inverse">Volver</a>
    <br><br><br>
    <form class="form-inline" action="{{ path('b_add_sale') }}" method="post">
        <div class="form-group">
            <label for="codigo">Código de Producto</label>
            <input type="text" class="form-control" id="codigo" name="codigo" placeholder="codigo" required="required">
        </div>
        <div class="form-group">
            <label for="price">Compra</label>
            <input type="number" step="1" class="form-control" id="price1" name="price1" placeholder="numero" required="required">
        </div>
        <div class="form-group">
            <label for="price">Por</label>
            <input type="number" step="1" class="form-control" id="price2" name="price2" placeholder="numero" required="required">
        </div>
        <button type="submit" class="btn btn-inverse">Añadir</button>
    </form>
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>

    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>

    {% endfor %}
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Código</th>
            <th>Precio</th>
            <th>Precio-A</th>
            <th style="color: #ff0000">Forma</th>
            <th>Foto</th>
            <th>Categoría</th>
            <th>Operaciones</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.productNameEs }}</td>
                <td>{{ product.code }}</td>
                <td>{{ product.price|number_format(2, '.', ',') }}</td>
                <td>{{ product.priceA|number_format(2, '.', ',') }}</td>
                <td style="color: #ff0000">{{ product.maiUnit }} x {{ product.suanUnit }}</td>
                <td><img src="{{ asset('uploads/fotos/' ~ product.foto) }}" height="100px" width="80px"></td>
                <td>{{ product.category.categoryNameEs }}</td>
                <td>
                    <a href="{{ path('b_delete_sale', { 'id': product.id }) }}" class="btn btn-danger">Quitar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}