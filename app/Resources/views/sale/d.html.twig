{% block content %}
    <h1 class="sub-header">Descuento Hasta X menos Y</h1>
    <a href="{{ path('sale_index') }}" class="button button-rounded button-inverse">Volver</a>
    <br><br><br>
    <form class="form-inline" action="{{ path('d_edit_sale') }}" method="post">
        <div class="form-group">
            <label for="codigo">Hasta</label>
            <input type="number" step="0.01" class="form-control" id="codigo" name="codigo" placeholder="cuanto" required="required">
        </div>
        <div class="form-group">
            <label for="price">menos</label>
            <input type="number" step="0.01" class="form-control" id="price" name="price" placeholder="cuanto" required="required">
        </div>
        <button type="submit" class="btn btn-inverse">Editar</button>
    </form>
    <br>
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>

    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>

    {% endfor %}
    <h4>Si no hay este descuento, edita el "menos" al 0.</h4>
    <br>
    <div class="col-xs-4">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>Hasta</th>
                <th>Menos</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ global.man }}</td>
                    <td>{{ global.jian }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}