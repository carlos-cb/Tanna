{% endblock %}

{% block content %}
    <h1 class="sub-header">Gestión de Categorías</h1>
    <br>
    <ul>
        <li>
            <a href="{{ path('category_new') }}" class="button button-rounded button-inverse">Crear Nuevo</a>
        </li>
    </ul>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre de Categoría ES</th>
            <th>Nombre de Categoría EN</th>
            <th>Descripción</th>
            <th>Operaciones</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.categoryNameEs }}</td>
                <td>{{ category.categoryNameEn }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="button button-tiny button-primary">Modificar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
